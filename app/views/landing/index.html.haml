    .fixed-bg-slide
      .imgbg.stars-cover
  .container.mt-20.mb-30
    %h2.section-title.center-text Projects
    #list_programs.row.program-tile-row
      = render partial: 'programs/program', collection: @projects, as: :program

.container-fluid.container-margin.platform-cover-container
  .platform-cover.landing-cover.medium-post-cover
    .fixed-bg-slide
      .imgbg.stars-cover
