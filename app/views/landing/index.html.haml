.container-fluid.container-margin.platform-cover-container.bottom-platform-cover-container
  .platform-cover.landing-cover
    .fixed-bg-slide
      .imgbg.stars-cover
  .container.landing-cover-detail.center-text
    #newsletter
      %h3 Sign up for our newsletter
      = form_tag '//space.us15.list-manage.com/subscribe/post?u=40bc28142665fd2205e8673ec&id=dc4a585c29',
        method: :post,
        target: '_blank',
        id: 'newsletter_form',
        onsubmit: "setTimeout(function() { document.getElementById('newsletter_form').reset(); }, 3000);",
        class: 'form-inline col-md-6 col-md-offset-3 col-sm-12 col-xs-12' do
        .form-group.col-xs-9.col-sm-10.col-md-10.col-lg-11.p-0
          = hidden_field_tag 'b_40bc28142665fd2205e8673ec_dc4a585c29'
          = text_field_tag 'EMAIL', nil, class: 'email', id: 'newsletter_email_field', autocomplete: 'off'
        .col-xs-2.col-sm-2.col-md-2.col-lg-1.p-0
          = button_tag 'Submit', value: 'Subscribe', name: 'subscribe', class: 'btn btn-info subscribe-btn'

= render 'shared/footer'
= render "shared/modal_confirmation",
  id: 'post_delete_confirmation_modal',
  title: 'Delete Post',
  content: 'Are you sure you want to send this post into the void?',
  action: { title: 'Delete', method: :delete, remote: false }

