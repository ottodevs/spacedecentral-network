.container.platform-show-container.program_index
  - if user_signed_in? && current_user.is_admin_user?
    .row.mb-20
      .col-md-12
        = link_to 'Create New Program', new_program_path,
          class: "btn btn-primary pull-right", id: "create_new_program_button"
  .row
    = render partial: 'programs/program', collection: @programs, as: :program

.container-fluid.container-margin.platform-cover-container.bottom-platform-cover-container.mt-30
  .platform-cover.landing-cover
    .fixed-bg-slide
      .imgbg

= render 'shared/footer'
